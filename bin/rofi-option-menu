#!/bin/bash

LOCK=""
SLEEP=""
LOGOUT=""
RESTART=""
SHUTDOWN=""

list_icons() {
    echo $LOCK
    echo $SLEEP
    echo $LOGOUT
    echo $RESTART
    echo $SHUTDOWN
}

handle_option() {
    case "$1" in
        "$LOCK")
            $HOME/bin/lock
            ;;
        "$SLEEP")
            if $($HOME/bin/rofi-confirm-menu $SLEEP); then
                systemctl suspend
            fi
            ;;
        "$LOGOUT")
            if $($HOME/bin/rofi-confirm-menu $LOGOUT); then
                i3-msg exit
            fi
            ;;
        "$RESTART")
            if $($HOME/bin/rofi-confirm-menu $RESTART); then
                reboot
            fi
            ;;
        "$SHUTDOWN")
            if $($HOME/bin/rofi-confirm-menu $SHUTDOWN); then
                shutdown now
            fi
            ;;
    esac
}

SELECTION="$(list_icons | rofi -dmenu -theme $HOME/.config/rofi/options_menu)"
handle_option $SELECTION &